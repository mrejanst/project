<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- [Technology Used List] -->
        <record id="z_technology_used_list" model="ir.ui.view">
            <field name="name">technology.used.list</field>
            <field name="model">technology.used</field>
            <field name="arch" type="xml">
                <list string="Technology Used" editable="top">
                    <field name="z_name"/>
                    <field name="create_uid" string="Create By"/>
                    <field name="create_date" string="Create Date"/>
                </list>
            </field>
        </record>

        <!-- [Technology Used Action] -->
        <record id="z_technology_used_action" model="ir.actions.act_window">
            <field name="name">Technology Used</field>
            <field name="res_model">technology.used</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_mode">list</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No projects found. Let's create one!</p>
                <p>Create projects to organize your tasks. Define a different workflow for each project.</p>
            </field>
        </record>

    </data>
</odoo>
